{% extends 'base.html.twig' %}

{% block title %}Job index{% endblock %}
 
{% block body %}
    <h1>Job index</h1>
    <a href="{{ path('job_new') }}"class="btn btn-success btn-sm">Create new</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>IsActive</th>
                <th>Title</th>
                <th>Type</th>
                <th>Location</th>
                <th>ClosingDate</th>
                <th>Salary</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job in jobs %}
            <tr>
                <td>{{ job.id }}</td>
                <td>{{ job.description }}</td>
                <td>{{ job.isActive ? 'Yes' : 'No' }}</td>
                <td>{{ job.title }}</td>
                <td>{{ job.type }}</td>
                <td>{{ job.location }}</td>
                <td>{{ job.closingDate ? job.closingDate|date('Y-m-d') : '' }}</td>
                <td>{{ job.salary }}</td>
                <td>{{ job.createdAt ? job.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ job.updatedAt ? job.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('job_show', {'id': job.id}) }}"class="btn btn-primary btn-sm btn-block">show</a>
                    <a href="{{ path('job_edit', {'id': job.id}) }}"class="btn btn-secondary btn-sm btn-block">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
