{% extends 'base.html.twig' %}

{% block title %}AdminNote{% endblock %}

{% block body %}
    <h1>AdminNote</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ admin_note.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ admin_note.content }}</td>
            </tr>
            <tr>
                <th>Files</th>
                <td>
                  {% for file in admin_note.files %}
                    <a href="{{ path('admin_note_download', { filename: file }) }}">
                      {{ file }}
                    </a>
                  {% endfor %}
                </td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ admin_note.createdAt ? admin_note.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ admin_note.updatedAt ? admin_note.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_note_index') }}"class="btn btn-light btn-lg btn-block">back to list</a>

    <a href="{{ path('admin_note_edit', {'id': admin_note.id}) }}"class="btn btn-secondary btn-sm btn-block">edit</a>

    {{ include('admin_note/_delete_form.html.twig') }}
{% endblock %}
