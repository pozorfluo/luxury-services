{% extends 'base.html.twig' %} {% block title %}Profile index{% endblock %} {%
block body %}
<h1>Profile index</h1>
<a href="{{ path('profile_new') }}"class="btn btn-success btn-sm">Create new</a>
<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>FirstName</th>
      <th>LastName</th>
      <th>HasPassport</th>
      <th>CurrentLocation</th>
      <th>DateOfBirth</th>
      <th>IsAvailable</th>
      <th>Experience</th>
      <th>actions</th>
    </tr>
  </thead>
  <tbody>
    {% for profile in profiles %}
    <tr>
      <td>{{ profile.id }}</td>
      <td>{{ profile.firstName }}</td>
      <td>{{ profile.lastName }}</td>
      <td>{{ profile.hasPassport ? "Yes" : "No" }}</td>
      <td>{{ profile.currentLocation }}</td>
      <td>
        {{ profile.dateOfBirth ? profile.dateOfBirth|date('Y-m-d') : '' }}
      </td>
      <td>{{ profile.isAvailable ? "Yes" : "No" }}</td>
      <td>
        {{
          profile.experience
            ? profile.experience.format("%y year(s), %m month(s), %d day(s)")
            : ""
        }}
      </td>
      <td>
        <a href="{{ path('profile_show', { id: profile.id }) }}"class="btn btn-primary btn-sm btn-block">show</a>
        <a href="{{ path('profile_edit', { id: profile.id }) }}"class="btn btn-secondary btn-sm btn-block">edit</a>
        {{ include("profile/_delete_form.html.twig") }}
      </td>
    </tr>
    {% else %}
    <tr>
      <td colspan="21">no records found</td>
    </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock %}
